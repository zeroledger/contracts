{
  "name": "sol-starter",
  "version": "0.4.0-a",
  "description": "Template to bootstrap solidity project with foundry and hardhat",
  "author": "Dzmitry Lahunouski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com:dgma/sol-starter.git"
  },
  "scripts": {
    "clean": "forge clean; rm -rf node_modules; rm .env",
    "compile": "hardhat compile",
    "int": "hardhat test",
    "test": "forge test -vvv; hardhat test",
    "unit:all": "forge test -vvv",
    "unit": "forge test -vvv --match-contract",
    "gas": "forge snapshot",
    "format": "forge fmt src/; forge fmt test/",
    "lint": "solhint src/**/*.sol",
    "node": "hardhat node",
    "deploy": "npx hardhat deploy-bundle --network $(network)",
    "deploy:hh": "npx hardhat --network hardhat deploy-bundle",
    "deploy:localhost": "npx hardhat --network localhost deploy-bundle",
    "deploy:t": "npx hardhat --network optimismSepolia deploy-bundle"
  },
  "bugs": {
    "url": "https://github.com:dgma/sol-starter/issues"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "devDependencies": {
    "hardhat-abi-exporter": "^2.11.0",
    "poseidon-lite": "^0.3.0",
    "poseidon-solidity": "^0.0.5",
    "snarkjs": "^0.7.5",
    "@dgma/hardhat-sol-bundler": "^0.5.11",
    "@eslint/js": "^9.30.0",
    "@nomicfoundation/hardhat-foundry": "^1.2.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.10",
    "@types/snarkjs": "^0.7.9",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.30.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "solc": "^0.8.30",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.16"
  }
}